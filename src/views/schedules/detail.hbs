<div class="page-header">
    <a href="/schedules" class="btn btn-secondary" style="margin-bottom: 20px;">
        <i class="fas fa-arrow-left"></i> Back to Schedules
    </a>
    <h1><i class="fas fa-calendar-alt"></i> Schedule Detail</h1>
</div>

<div class="card" style="max-width: 800px;">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-info-circle"></i> Schedule #{{schedule.id}}
        </h3>
        <span class="badge badge-success">Active</span>
    </div>
    
    <div style="padding: 30px;">
        <!-- Train Info -->
        <div style="display: flex; align-items: center; gap: 20px; margin-bottom: 30px; padding: 20px; background: rgba(59, 130, 246, 0.1); border-radius: 12px;">
            <div style="width: 60px; height: 60px; background: rgba(59, 130, 246, 0.2); border-radius: 15px; display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-train" style="font-size: 1.5rem; color: #3b82f6;"></i>
            </div>
            <div>
                <h2 style="margin: 0; color: white;">{{schedule.train.name}}</h2>
                <span class="badge badge-primary" style="margin-top: 8px;">{{schedule.train.type}}</span>
                <span class="badge badge-info">{{schedule.train.totalSeats}} seats</span>
            </div>
        </div>
        
        <!-- Route Info -->
        <div style="margin-bottom: 30px;">
            <h4 style="color: #888; margin-bottom: 15px;"><i class="fas fa-route"></i> Route Information</h4>
            <div style="display: flex; align-items: center; gap: 20px;">
                <div style="text-align: center; flex: 1;">
                    <div style="font-size: 0.9rem; color: #888;">From</div>
                    <div style="font-size: 1.8rem; font-weight: bold; color: #3b82f6;">{{schedule.originStation.code}}</div>
                    <div style="color: white;">{{schedule.originStation.name}}</div>
                    <div style="font-size: 0.85rem; color: #888;">{{schedule.originStation.city}}</div>
                </div>
                
                <div style="flex: 0 0 100px; display: flex; flex-direction: column; align-items: center;">
                    <div style="width: 100%; height: 2px; background: linear-gradient(90deg, #3b82f6, #22c55e);"></div>
                    <i class="fas fa-plane" style="color: #666; transform: rotate(90deg); margin: 10px 0;"></i>
                    <div style="color: #888; font-size: 0.8rem;">Direct</div>
                </div>
                
                <div style="text-align: center; flex: 1;">
                    <div style="font-size: 0.9rem; color: #888;">To</div>
                    <div style="font-size: 1.8rem; font-weight: bold; color: #22c55e;">{{schedule.destinationStation.code}}</div>
                    <div style="color: white;">{{schedule.destinationStation.name}}</div>
                    <div style="font-size: 0.85rem; color: #888;">{{schedule.destinationStation.city}}</div>
                </div>
            </div>
        </div>
        
        <!-- Time Info -->
        <div style="margin-bottom: 30px;">
            <h4 style="color: #888; margin-bottom: 15px;"><i class="fas fa-clock"></i> Time Information</h4>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                <div style="padding: 20px; background: rgba(255,255,255,0.05); border-radius: 12px; border-left: 4px solid #3b82f6;">
                    <div style="font-size: 0.9rem; color: #888;">Departure</div>
                    <div style="font-size: 1.2rem; font-weight: bold; color: white;">{{formatDate schedule.departureTime}}</div>
                </div>
                <div style="padding: 20px; background: rgba(255,255,255,0.05); border-radius: 12px; border-left: 4px solid #22c55e;">
                    <div style="font-size: 0.9rem; color: #888;">Arrival</div>
                    <div style="font-size: 1.2rem; font-weight: bold; color: white;">{{formatDate schedule.arrivalTime}}</div>
                </div>
            </div>
        </div>
        
        <!-- Price -->
        <div style="margin-bottom: 30px;">
            <h4 style="color: #888; margin-bottom: 15px;"><i class="fas fa-tag"></i> Pricing</h4>
            <div style="padding: 20px; background: linear-gradient(135deg, rgba(34, 197, 94, 0.2), rgba(34, 197, 94, 0.1)); border-radius: 12px; text-align: center;">
                <div style="font-size: 0.9rem; color: #888;">Ticket Price</div>
                <div style="font-size: 2rem; font-weight: bold; color: #22c55e;">{{formatPrice schedule.price}}</div>
                <div style="font-size: 0.8rem; color: #888; margin-top: 5px;">per person</div>
            </div>
        </div>
        
        {{#if isLoggedIn}}
        <div style="display: flex; gap: 15px; justify-content: center;">
            <a href="/bookings/create?scheduleId={{schedule.id}}" class="btn btn-primary" style="padding: 15px 30px;">
                <i class="fas fa-ticket-alt"></i> Book This Schedule
            </a>
        </div>
        {{else}}
        <div style="text-align: center; padding: 20px; background: rgba(251, 191, 36, 0.1); border-radius: 12px; border: 1px solid rgba(251, 191, 36, 0.3);">
            <i class="fas fa-info-circle" style="color: #fbbf24; margin-bottom: 10px;"></i>
            <p style="color: #fbbf24; margin: 0;">Please <a href="/auth/login" style="color: #fef08a; text-decoration: underline;">login</a> to book this schedule</p>
        </div>
        {{/if}}
    </div>
</div>
