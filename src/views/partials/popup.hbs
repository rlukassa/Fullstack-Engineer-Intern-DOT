<style>
    .popup-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 99999;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .popup-toast {
        padding: 14px 20px;
        border-radius: var(--radius-lg);
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 0.8125rem;
        font-weight: 500;
        min-width: 280px;
        max-width: 420px;
        animation: popupSlideIn 0.35s ease-out;
        box-shadow: var(--shadow-lg);
        cursor: pointer;
        border: 1px solid transparent;
    }
    .popup-toast i { font-size: 1rem; flex-shrink: 0; }

    .popup-toast.success {
        background: #f0fdf4;
        color: #166534;
        border-color: #bbf7d0;
    }
    .popup-toast.success i { color: #16a34a; }

    .popup-toast.danger {
        background: #fef2f2;
        color: #991b1b;
        border-color: #fecaca;
    }
    .popup-toast.danger i { color: #ef4444; }

    .popup-toast.warning {
        background: #fffbeb;
        color: #92400e;
        border-color: #fde68a;
    }
    .popup-toast.warning i { color: #f59e0b; }

    .popup-toast.info {
        background: #eff6ff;
        color: #1e40af;
        border-color: #bfdbfe;
    }
    .popup-toast.info i { color: #3b82f6; }

    @keyframes popupSlideIn {
        from { opacity: 0; transform: translateX(24px); }
        to { opacity: 1; transform: translateX(0); }
    }
    @keyframes popupFadeOut {
        from { opacity: 1; transform: translateX(0); }
        to { opacity: 0; transform: translateX(24px); }
    }
</style>

<div class="popup-container" id="popupContainer"></div>

<script>
    function showPopup(type, message, duration) {
        duration = duration || 4000;
        var container = document.getElementById('popupContainer');
        var icons = { success: 'fas fa-check-circle', danger: 'fas fa-exclamation-circle', warning: 'fas fa-exclamation-triangle', info: 'fas fa-info-circle' };
        var toast = document.createElement('div');
        toast.className = 'popup-toast ' + (type || 'info');
        toast.innerHTML = '<i class="' + (icons[type] || icons.info) + '"></i><span>' + message + '</span>';
        toast.addEventListener('click', function() { removeToast(toast); });
        container.appendChild(toast);
        setTimeout(function() { removeToast(toast); }, duration);
    }
    function removeToast(toast) {
        if (toast && toast.parentNode) {
            toast.style.animation = 'popupFadeOut 0.3s ease-out forwards';
            setTimeout(function() { if (toast.parentNode) toast.parentNode.removeChild(toast); }, 300);
        }
    }
</script>
