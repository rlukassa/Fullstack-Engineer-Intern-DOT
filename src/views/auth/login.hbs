<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - SobatKereta</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, system-ui, sans-serif;
            background: #f0f4f8;
            min-height: 100vh;
            -webkit-font-smoothing: antialiased;
        }

        /* Top Navbar */
        .auth-navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px 40px;
            background: #fff;
            border-bottom: 1px solid #e2e6eb;
        }
        .auth-navbar-brand {
            font-size: 1.0625rem;
            font-weight: 700;
            color: #1a1d23;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
            letter-spacing: -0.02em;
        }
        .auth-navbar-brand .icon {
            width: 32px; height: 32px;
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            border-radius: 8px;
            display: flex; align-items: center; justify-content: center;
            color: #fff; font-size: 0.875rem;
        }
        .auth-navbar-links { display: flex; gap: 6px; align-items: center; }
        .auth-navbar-links a {
            color: #718096; text-decoration: none; padding: 7px 14px;
            border-radius: 8px; font-size: 0.8125rem; font-weight: 500;
            transition: all 150ms ease;
        }
        .auth-navbar-links a:hover { color: #1a1d23; background: #f0f4f8; }
        .auth-navbar-links .btn-register {
            background: #3b82f6; color: #fff; border: none; padding: 8px 18px;
            border-radius: 8px; font-size: 0.8125rem; font-weight: 600;
            cursor: pointer; text-decoration: none; transition: all 150ms ease;
        }
        .auth-navbar-links .btn-register:hover { background: #2563eb; }

        /* Split Layout */
        .auth-split {
            display: flex;
            min-height: calc(100vh - 61px);
        }

        /* Left side - Form */
        .auth-form-side {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
            background: #fff;
        }
        .auth-form-wrapper {
            width: 100%;
            max-width: 400px;
            animation: fadeInUp 0.5s ease-out;
        }
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(16px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .auth-form-wrapper h1 {
            font-size: 2rem;
            font-weight: 800;
            color: #3b82f6;
            margin-bottom: 8px;
            letter-spacing: -0.03em;
        }
        .auth-form-wrapper .subtitle {
            color: #718096;
            font-size: 0.9375rem;
            margin-bottom: 32px;
        }

        /* Toggle */
        .login-type-toggle {
            display: flex;
            background: #f0f4f8;
            border-radius: 10px;
            padding: 4px;
            margin-bottom: 28px;
        }
        .toggle-btn {
            flex: 1; padding: 10px; border: none;
            background: transparent; color: #718096;
            font-family: inherit; font-size: 0.8125rem; font-weight: 600;
            cursor: pointer; border-radius: 8px; transition: all 150ms ease;
        }
        .toggle-btn.active {
            background: #3b82f6; color: white;
            box-shadow: 0 2px 8px rgba(59, 130, 246, 0.25);
        }
        .toggle-btn:hover:not(.active) { color: #4a5568; }

        /* Form */
        .form-group { margin-bottom: 20px; }
        .form-label {
            display: block; margin-bottom: 6px;
            color: #4a5568; font-size: 0.8125rem; font-weight: 600;
        }
        .input-wrapper { position: relative; }
        .input-wrapper i.input-icon {
            position: absolute; left: 14px; top: 50%;
            transform: translateY(-50%); color: #a0aec0;
            font-size: 0.8125rem; transition: color 150ms ease;
        }
        .form-control {
            width: 100%; padding: 12px 14px 12px 42px;
            border: 1.5px solid #e2e6eb; border-radius: 10px;
            background: #fff; color: #1a1d23;
            font-family: inherit; font-size: 0.875rem;
            transition: all 150ms ease;
        }
        .form-control:focus {
            outline: none; border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }
        .form-control:focus ~ i.input-icon { color: #3b82f6; }
        .form-control::placeholder { color: #c0c7d0; }

        .password-toggle {
            position: absolute; right: 14px; top: 50%;
            transform: translateY(-50%); background: none; border: none;
            color: #a0aec0; cursor: pointer; padding: 4px;
            font-size: 0.8125rem; transition: color 150ms ease;
        }
        .password-toggle:hover { color: #4a5568; }

        .form-options {
            display: flex; justify-content: space-between;
            align-items: center; margin-bottom: 24px;
        }
        .remember-me {
            display: flex; align-items: center; gap: 8px;
            color: #4a5568; font-size: 0.8125rem; cursor: pointer;
        }
        .remember-me input[type="checkbox"] {
            width: 16px; height: 16px; accent-color: #3b82f6; cursor: pointer;
        }
        .forgot-link {
            color: #3b82f6; text-decoration: none;
            font-size: 0.8125rem; font-weight: 500;
        }
        .forgot-link:hover { text-decoration: underline; }

        .btn-login {
            width: 100%; padding: 13px; border: none; border-radius: 10px;
            background: #3b82f6; color: white;
            font-family: inherit; font-size: 0.9375rem; font-weight: 600;
            cursor: pointer; transition: all 150ms ease;
            display: flex; align-items: center; justify-content: center; gap: 8px;
        }
        .btn-login:hover {
            background: #2563eb;
            box-shadow: 0 4px 16px rgba(59, 130, 246, 0.3);
            transform: translateY(-1px);
        }
        .btn-login:active { transform: translateY(0); }

        .auth-footer {
            text-align: center; margin-top: 28px;
            padding-top: 20px; border-top: 1px solid #e2e6eb;
        }
        .auth-footer p { color: #718096; font-size: 0.8125rem; }
        .auth-footer a { color: #3b82f6; text-decoration: none; font-weight: 600; }
        .auth-footer a:hover { text-decoration: underline; }

        .error-message {
            background: rgba(239, 68, 68, 0.06); border: 1px solid rgba(239, 68, 68, 0.15);
            color: #dc2626; padding: 10px 14px; border-radius: 10px;
            font-size: 0.8125rem; margin-bottom: 20px;
            display: flex; align-items: center; gap: 8px;
        }
        .success-message {
            background: rgba(22, 163, 74, 0.06); border: 1px solid rgba(22, 163, 74, 0.15);
            color: #16a34a; padding: 10px 14px; border-radius: 10px;
            font-size: 0.8125rem; margin-bottom: 20px;
            display: flex; align-items: center; gap: 8px;
        }

        /* Right side - Illustration */
        .auth-illustration-side {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f0f4f8;
            padding: 40px;
            position: relative;
            overflow: hidden;
        }

        .illustration-container {
            position: relative;
            width: 100%;
            max-width: 480px;
            text-align: center;
            z-index: 1;
        }

        /* Large blue blob */
        .blob {
            position: absolute;
            width: 380px; height: 380px;
            background: linear-gradient(135deg, #3b82f6, #6366f1);
            border-radius: 50%;
            top: 50%; left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0.9;
        }

        /* Phone/Device mockup */
        .device-mockup {
            position: relative;
            z-index: 2;
            width: 220px;
            margin: 0 auto;
            background: #fbbf24;
            border-radius: 24px;
            padding: 24px 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
        }
        .device-mockup .avatar-circle {
            width: 64px; height: 64px;
            background: #60a5fa;
            border-radius: 50%;
            margin: 0 auto 20px;
            display: flex; align-items: center; justify-content: center;
        }
        .device-mockup .avatar-circle i {
            font-size: 1.75rem; color: #fff;
        }
        .device-mockup .field-bar {
            height: 10px;
            background: rgba(255,255,255,0.6);
            border-radius: 5px;
            margin-bottom: 12px;
        }
        .device-mockup .field-bar.short { width: 70%; }
        .device-mockup .field-bar.medium { width: 85%; }
        .device-mockup .login-dot {
            width: 40px; height: 40px;
            background: #3b82f6;
            border-radius: 50%;
            margin: 16px auto 0;
            display: flex; align-items: center; justify-content: center;
        }
        .device-mockup .login-dot i { color: #fff; font-size: 0.875rem; }

        /* Floating decorations */
        .float-icon {
            position: absolute;
            background: #fff;
            border-radius: 12px;
            padding: 12px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.08);
            z-index: 3;
            animation: floatBounce 3s ease-in-out infinite;
        }
        .float-icon i { font-size: 1.125rem; }
        .float-icon.top-left { top: 5%; left: 10%; animation-delay: 0s; }
        .float-icon.top-right { top: 10%; right: 8%; animation-delay: 0.5s; }
        .float-icon.bottom-left { bottom: 15%; left: 5%; animation-delay: 1s; }
        .float-icon.bottom-right { bottom: 8%; right: 12%; animation-delay: 1.5s; }

        @keyframes floatBounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        /* Person figure */
        .person-figure {
            position: absolute;
            right: 0;
            bottom: 10%;
            z-index: 3;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .person-head {
            width: 36px; height: 36px;
            background: #fbbf24;
            border-radius: 50%;
            margin-bottom: -4px;
        }
        .person-body {
            width: 28px; height: 48px;
            background: #3b82f6;
            border-radius: 14px 14px 8px 8px;
        }

        @media (max-width: 900px) {
            .auth-illustration-side { display: none; }
            .auth-form-side { min-height: calc(100vh - 61px); }
            .auth-navbar { padding: 14px 24px; }
            .auth-form-side { padding: 32px 24px; }
        }
        @media (max-width: 600px) {
            .auth-navbar { padding: 12px 16px; }
            .auth-navbar-brand { font-size: 0.9375rem; }
            .auth-navbar-brand .icon { width: 28px; height: 28px; font-size: 0.75rem; }
            .auth-form-side { padding: 24px 16px; }
            .auth-form-wrapper h1 { font-size: 1.5rem; }
            .auth-form-wrapper .subtitle { font-size: 0.8125rem; margin-bottom: 24px; }
            .form-options { flex-direction: column; align-items: flex-start; gap: 10px; }
        }
        @media (max-width: 360px) {
            .auth-form-side { padding: 20px 12px; }
            .auth-form-wrapper h1 { font-size: 1.35rem; }
            .auth-navbar { padding: 10px 12px; }
            .auth-navbar-links a { padding: 6px 10px; font-size: 0.75rem; }
            .auth-navbar-links .btn-register { padding: 6px 12px; font-size: 0.75rem; }
            .toggle-btn { padding: 8px; font-size: 0.75rem; }
            .form-control { font-size: 16px; padding: 11px 14px 11px 38px; }
            .btn-login { padding: 12px; font-size: 0.875rem; }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="auth-navbar">
        <a href="/" class="auth-navbar-brand">
            <div class="icon"><i class="fas fa-train"></i></div>
            SobatKereta
        </a>
        <div class="auth-navbar-links">
            <a href="/">Home</a>
            <a href="/auth/register" class="btn-register"><i class="fas fa-user-plus"></i> Daftar</a>
        </div>
    </nav>

    <div class="auth-split">
        <!-- Left: Form -->
        <div class="auth-form-side">
            <div class="auth-form-wrapper">
                <h1>Masuk</h1>
                <p class="subtitle">Masuk ke akun SobatKereta Anda</p>

                <!-- Login Type Toggle -->
                <div class="login-type-toggle">
                    <button type="button" class="toggle-btn active" onclick="switchLoginType('user', this)">
                        <i class="fas fa-user"></i> Pengguna
                    </button>
                    <button type="button" class="toggle-btn" onclick="switchLoginType('admin', this)">
                        <i class="fas fa-shield-alt"></i> Admin
                    </button>
                </div>

                {{#if error}}
                <div class="error-message">
                    <i class="fas fa-circle-exclamation"></i> {{error}}
                </div>
                {{/if}}

                {{#if success}}
                <div class="success-message">
                    <i class="fas fa-circle-check"></i> {{success}}
                </div>
                {{/if}}

                <form action="/auth/login" method="POST" id="loginForm">
                    <input type="hidden" name="loginType" id="loginType" value="user">

                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <div class="input-wrapper">
                            <input type="email" name="email" class="form-control" placeholder="nama@email.com" required>
                            <i class="fas fa-envelope input-icon"></i>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Password</label>
                        <div class="input-wrapper">
                            <input type="password" name="password" id="passwordField" class="form-control" placeholder="Masukkan password" required>
                            <i class="fas fa-lock input-icon"></i>
                            <button type="button" class="password-toggle" onclick="togglePassword()">
                                <i class="fas fa-eye" id="toggleIcon"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-options">
                        <label class="remember-me">
                            <input type="checkbox"> Remember me
                        </label>
                        <a href="#" class="forgot-link">Forgot Password?</a>
                    </div>

                    <button type="submit" class="btn-login">
                        SUBMIT <i class="fas fa-arrow-right"></i>
                    </button>
                </form>

                <div class="auth-footer">
                    <p>Belum punya akun? <a href="/auth/register">Daftar sekarang</a></p>
                </div>
            </div>
        </div>

        <!-- Right: Illustration -->
        <div class="auth-illustration-side">
            <div class="illustration-container">
                <div class="blob"></div>

                <div class="device-mockup">
                    <div class="avatar-circle">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="field-bar medium"></div>
                    <div class="field-bar"></div>
                    <div class="field-bar short"></div>
                    <div class="field-bar"></div>
                    <div class="login-dot"><i class="fas fa-arrow-right"></i></div>
                </div>

                <div class="person-figure">
                    <div class="person-head"></div>
                    <div class="person-body"></div>
                </div>
            </div>

            <div class="float-icon top-left"><i class="fas fa-train" style="color: #3b82f6;"></i></div>
            <div class="float-icon top-right"><i class="fas fa-cog" style="color: #a0aec0;"></i></div>
            <div class="float-icon bottom-left"><i class="fas fa-ticket-alt" style="color: #f59e0b;"></i></div>
            <div class="float-icon bottom-right"><i class="fas fa-shield-alt" style="color: #16a34a;"></i></div>
        </div>
    </div>

    <script>
        function switchLoginType(type, btn) {
            document.getElementById('loginType').value = type;
            document.querySelectorAll('.toggle-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
        }
        function togglePassword() {
            var field = document.getElementById('passwordField');
            var icon = document.getElementById('toggleIcon');
            if (field.type === 'password') {
                field.type = 'text';
                icon.className = 'fas fa-eye-slash';
            } else {
                field.type = 'password';
                icon.className = 'fas fa-eye';
            }
        }
    </script>
</body>
</html>
