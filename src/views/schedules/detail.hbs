<div class="page-header">
    <div style="display: flex; align-items: center; gap: 12px;">
        <a href="/schedules" class="btn btn-secondary" style="padding: 8px 12px;">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h1><i class="fas fa-calendar-alt"></i> Detail Jadwal</h1>
            <p>Informasi lengkap jadwal perjalanan</p>
        </div>
    </div>
</div>

{{#if schedule}}
<div class="card" style="max-width: 900px;">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-info-circle"></i> Jadwal #{{schedule.id}}
        </h3>
        {{#if (eq schedule.journeyStatus "BELUM_BERANGKAT")}}
        <span class="badge badge-warning"><i class="fas fa-clock"></i> Belum Berangkat</span>
        {{else if (eq schedule.journeyStatus "DALAM_PERJALANAN")}}
        <span class="badge badge-info"><i class="fas fa-train"></i> Dalam Perjalanan</span>
        {{else if (eq schedule.journeyStatus "TIBA_LOKASI")}}
        <span class="badge badge-success"><i class="fas fa-check-circle"></i> Tiba Lokasi</span>
        {{else}}
        <span class="badge badge-secondary">{{schedule.journeyStatus}}</span>
        {{/if}}
    </div>
    
    <!-- Train Info -->
    <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 24px; padding: 16px; background: var(--primary-light); border-radius: var(--radius-lg);">
        <div style="width: 48px; height: 48px; background: var(--bg-surface); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center;">
            <i class="fas fa-train" style="font-size: 1.25rem; color: var(--primary);"></i>
        </div>
        <div>
            <h2 style="margin: 0; color: var(--text-primary); font-size: 1.25rem;">{{schedule.train.name}}</h2>
            <div style="display: flex; gap: 8px; margin-top: 6px;">
                <span class="badge badge-primary">{{schedule.train.type}}</span>
                <span class="badge badge-info">{{schedule.train.totalSeats}} kursi</span>
            </div>
        </div>
    </div>

    <!-- Seat Availability -->
    {{#if seatInfo}}
    <div style="margin-bottom: 24px; padding: 16px; background: var(--bg-elevated); border-radius: var(--radius-lg); border: 1px solid var(--border);">
        <h4 style="color: var(--primary); margin-bottom: 12px; font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em;"><i class="fas fa-chair"></i> Ketersediaan Kursi</h4>
        <div style="display: flex; gap: 24px; flex-wrap: wrap;">
            <div style="text-align: center;">
                <div style="font-size: 1.75rem; font-weight: 700; {{#if (gt seatInfo.available 0)}}color: var(--success);{{else}}color: var(--danger);{{/if}}">{{seatInfo.available}}</div>
                <div style="color: var(--text-muted); font-size: 0.8125rem;">Tersedia</div>
            </div>
            <div style="text-align: center;">
                <div style="font-size: 1.75rem; font-weight: 700; color: var(--warning);">{{seatInfo.booked}}</div>
                <div style="color: var(--text-muted); font-size: 0.8125rem;">Terpesan</div>
            </div>
            <div style="text-align: center;">
                <div style="font-size: 1.75rem; font-weight: 700; color: var(--text-muted);">{{seatInfo.total}}</div>
                <div style="color: var(--text-muted); font-size: 0.8125rem;">Total</div>
            </div>
        </div>
        {{#if (eq seatInfo.available 0)}}
        <div style="margin-top: 12px; padding: 10px; background: var(--danger-light); border-radius: var(--radius-sm); text-align: center;">
            <i class="fas fa-exclamation-circle" style="color: var(--danger);"></i>
            <span style="color: var(--danger); margin-left: 6px; font-size: 0.8125rem;">Kursi sudah habis untuk jadwal ini</span>
        </div>
        {{/if}}
    </div>
    {{/if}}

    <!-- Admin: Journey Status -->
    {{#if (eq userRole "ADMIN")}}
    <div style="margin-bottom: 24px; padding: 16px; background: var(--bg-elevated); border-radius: var(--radius-lg); border: 1px solid var(--border);">
        <h4 style="color: var(--text-secondary); margin-bottom: 12px; font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em;"><i class="fas fa-cog"></i> Kelola Status Perjalanan</h4>
        <div style="display: flex; gap: 8px; flex-wrap: wrap;">
            <form action="/schedules/{{schedule.id}}/status" method="POST" style="display: inline;">
                <input type="hidden" name="status" value="BELUM_BERANGKAT">
                <button type="submit" class="btn btn-warning btn-sm" {{#if (eq schedule.journeyStatus 'BELUM_BERANGKAT')}}disabled style="opacity: 0.5; cursor: not-allowed;"{{/if}}>
                    <i class="fas fa-clock"></i> Belum Berangkat
                </button>
            </form>
            <form action="/schedules/{{schedule.id}}/status" method="POST" style="display: inline;">
                <input type="hidden" name="status" value="DALAM_PERJALANAN">
                <button type="submit" class="btn btn-primary btn-sm" {{#if (eq schedule.journeyStatus 'DALAM_PERJALANAN')}}disabled style="opacity: 0.5; cursor: not-allowed;"{{/if}}>
                    <i class="fas fa-train"></i> Dalam Perjalanan
                </button>
            </form>
            <form action="/schedules/{{schedule.id}}/status" method="POST" style="display: inline;">
                <input type="hidden" name="status" value="TIBA_LOKASI">
                <button type="submit" class="btn btn-success btn-sm" {{#if (eq schedule.journeyStatus 'TIBA_LOKASI')}}disabled style="opacity: 0.5; cursor: not-allowed;"{{/if}}>
                    <i class="fas fa-check-circle"></i> Tiba Lokasi
                </button>
            </form>
        </div>
    </div>

    <!-- Admin: Edit Schedule -->
    <div style="margin-bottom: 24px; padding: 16px; background: var(--bg-elevated); border-radius: var(--radius-lg); border: 1px solid var(--border);">
        <h4 style="color: var(--text-secondary); margin-bottom: 4px; font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em;"><i class="fas fa-edit"></i> Edit Jadwal</h4>
        <p style="color: var(--text-muted); font-size: 0.8125rem; margin-bottom: 16px;">
            <i class="fas fa-info-circle"></i> Mengubah jadwal akan otomatis me-refund semua pemesanan yang sudah terkonfirmasi.
        </p>
        <form action="/schedules/{{schedule.id}}/update" method="POST">
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px;">
                <div class="form-group" style="margin: 0;">
                    <label class="form-label">Kereta</label>
                    <select name="trainId" class="search-input">
                        {{#each trains}}
                        <option value="{{this.id}}" {{#if (eq this.id ../schedule.trainId)}}selected{{/if}}>{{this.name}} ({{this.type}})</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group" style="margin: 0;">
                    <label class="form-label">Harga (Rp)</label>
                    <input type="number" name="price" class="search-input" value="{{schedule.price}}" min="0">
                </div>
                <div class="form-group" style="margin: 0;">
                    <label class="form-label">Stasiun Asal</label>
                    <select name="originStationId" class="search-input">
                        {{#each stations}}
                        <option value="{{this.id}}" {{#if (eq this.id ../schedule.originStationId)}}selected{{/if}}>{{this.code}} - {{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group" style="margin: 0;">
                    <label class="form-label">Stasiun Tujuan</label>
                    <select name="destinationStationId" class="search-input">
                        {{#each stations}}
                        <option value="{{this.id}}" {{#if (eq this.id ../schedule.destinationStationId)}}selected{{/if}}>{{this.code}} - {{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group" style="margin: 0;">
                    <label class="form-label">Waktu Berangkat</label>
                    <input type="datetime-local" name="departureTime" class="search-input">
                </div>
                <div class="form-group" style="margin: 0;">
                    <label class="form-label">Waktu Tiba</label>
                    <input type="datetime-local" name="arrivalTime" class="search-input">
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top: 16px;">
                <i class="fas fa-save"></i> Simpan Perubahan
            </button>
        </form>
    </div>
    {{/if}}
    
    <!-- Route Info -->
    <div style="margin-bottom: 24px;">
        <h4 style="color: var(--text-muted); margin-bottom: 12px; font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em;"><i class="fas fa-route"></i> Informasi Rute</h4>
        <div style="display: flex; align-items: center; gap: 16px;">
            <div style="text-align: center; flex: 1;">
                <div style="font-size: 0.8125rem; color: var(--text-muted);">Dari</div>
                <div style="font-size: 1.5rem; font-weight: 700; color: var(--primary);">{{schedule.originStation.code}}</div>
                <div style="color: var(--text-primary); font-size: 0.875rem;">{{schedule.originStation.name}}</div>
            </div>
            <div style="flex: 0 0 80px; display: flex; flex-direction: column; align-items: center;">
                <div style="width: 100%; height: 2px; background: linear-gradient(90deg, var(--primary), var(--success));"></div>
                <i class="fas fa-train" style="color: var(--text-muted); margin: 8px 0; font-size: 0.75rem;"></i>
                <div style="color: var(--text-muted); font-size: 0.75rem;">Langsung</div>
            </div>
            <div style="text-align: center; flex: 1;">
                <div style="font-size: 0.8125rem; color: var(--text-muted);">Ke</div>
                <div style="font-size: 1.5rem; font-weight: 700; color: var(--success);">{{schedule.destinationStation.code}}</div>
                <div style="color: var(--text-primary); font-size: 0.875rem;">{{schedule.destinationStation.name}}</div>
            </div>
        </div>
    </div>
    
    <!-- Time Info -->
    <div style="margin-bottom: 24px;">
        <h4 style="color: var(--text-muted); margin-bottom: 12px; font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em;"><i class="fas fa-clock"></i> Informasi Waktu</h4>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px;">
            <div style="padding: 16px; background: var(--bg-elevated); border-radius: var(--radius-md); border-left: 3px solid var(--primary);">
                <div style="font-size: 0.8125rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.03em;">Keberangkatan</div>
                <div style="font-size: 1rem; font-weight: 600; color: var(--text-primary); margin-top: 4px;">{{formatDate schedule.departureTime}}</div>
            </div>
            <div style="padding: 16px; background: var(--bg-elevated); border-radius: var(--radius-md); border-left: 3px solid var(--success);">
                <div style="font-size: 0.8125rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.03em;">Kedatangan</div>
                <div style="font-size: 1rem; font-weight: 600; color: var(--text-primary); margin-top: 4px;">{{formatDate schedule.arrivalTime}}</div>
            </div>
        </div>
    </div>
    
    <!-- Price -->
    <div style="margin-bottom: 24px;">
        <h4 style="color: var(--text-muted); margin-bottom: 12px; font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em;"><i class="fas fa-tag"></i> Harga</h4>
        <div style="padding: 20px; background: var(--success-light); border-radius: var(--radius-lg); text-align: center;">
            <div style="font-size: 0.8125rem; color: var(--text-muted);">Harga Tiket</div>
            <div style="font-size: 1.75rem; font-weight: 700; color: var(--success);">{{formatPrice schedule.price}}</div>
            <div style="font-size: 0.75rem; color: var(--text-muted); margin-top: 4px;">per orang</div>
        </div>
    </div>
    
    <!-- Booking CTA -->
    {{#if isLoggedIn}}
        {{#if (not (eq userRole "ADMIN"))}}
            {{#if (eq schedule.journeyStatus "BELUM_BERANGKAT")}}
                {{#if (gt seatInfo.available 0)}}
                <div style="display: flex; gap: 12px; justify-content: center;">
                    <button onclick="openBookingModal()" class="btn btn-success" style="padding: 12px 28px;">
                        <i class="fas fa-ticket-alt"></i> Pesan Sekarang
                    </button>
                </div>
                <p style="text-align: center; color: var(--text-muted); margin-top: 12px; font-size: 0.8125rem;">Saldo Anda: <strong style="color: var(--success);">{{formatBalance balance}}</strong></p>
                {{else}}
                <div style="text-align: center; padding: 16px; background: var(--danger-light); border-radius: var(--radius-lg); border: 1px solid rgba(239, 68, 68, 0.3);">
                    <i class="fas fa-ban" style="color: var(--danger); font-size: 1.5rem; margin-bottom: 8px;"></i>
                    <p style="color: var(--danger); margin: 0; font-weight: 600;">Kursi Sudah Habis</p>
                    <p style="color: var(--text-muted); margin: 4px 0 0; font-size: 0.8125rem;">Maaf, semua kursi untuk jadwal ini sudah terpesan.</p>
                </div>
                {{/if}}
            {{else}}
            <div style="text-align: center; padding: 16px; background: var(--danger-light); border-radius: var(--radius-lg);">
                <i class="fas fa-exclamation-circle" style="color: var(--danger); font-size: 1.25rem; margin-bottom: 8px;"></i>
                <p style="color: var(--danger); margin: 0; font-size: 0.875rem;">Kereta sudah berangkat atau sudah tiba, tidak bisa memesan.</p>
            </div>
            {{/if}}
        {{/if}}
    {{else}}
    <div style="text-align: center; padding: 16px; background: var(--warning-light); border-radius: var(--radius-lg);">
        <i class="fas fa-info-circle" style="color: var(--warning); margin-bottom: 8px;"></i>
        <p style="color: var(--warning); margin: 0; font-size: 0.875rem;">Silakan <a href="/auth/login" style="color: var(--primary); text-decoration: underline;">login</a> untuk memesan jadwal ini</p>
    </div>
    {{/if}}
</div>

<!-- Booking Modal -->
{{#if isLoggedIn}}
{{#if (not (eq userRole "ADMIN"))}}
{{#if (gt seatInfo.available 0)}}
<div class="modal-overlay" id="bookingModal">
    <div class="modal">
        <div class="modal-header">
            <h3 class="modal-title"><i class="fas fa-ticket-alt" style="color: var(--success);"></i> Pesan Tiket</h3>
            <button class="modal-close" onclick="closeModal('bookingModal')">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <form action="/bookings" method="POST">
            <input type="hidden" name="scheduleId" value="{{schedule.id}}">
            <div class="modal-body">
                <p style="margin-bottom: 10px; color: var(--text-secondary);">Kereta: <strong style="color: var(--text-primary);">{{schedule.train.name}}</strong></p>
                <p style="margin-bottom: 10px; color: var(--text-secondary);">Rute: <strong style="color: var(--text-primary);">{{schedule.originStation.code}} â†’ {{schedule.destinationStation.code}}</strong></p>
                <p style="margin-bottom: 10px; color: var(--text-secondary);">Harga per kursi: <strong style="color: var(--success);">{{formatPrice schedule.price}}</strong></p>
                <p style="margin-bottom: 10px; color: var(--text-muted);">Saldo: <strong style="color: var(--success);">{{formatBalance balance}}</strong></p>
                <p style="margin-bottom: 16px; color: var(--primary); font-size: 0.875rem;"><i class="fas fa-chair"></i> Tersedia: <strong>{{seatInfo.available}}</strong> dari {{seatInfo.total}}</p>
                
                <div class="form-group">
                    <label class="form-label">Jumlah Kursi (max: {{seatInfo.available}})</label>
                    <input type="number" name="seatCount" id="seatCountInput" class="form-control" value="1" min="1" max="{{seatInfo.available}}" required onchange="updateTotal()">
                </div>
                
                <div style="padding: 16px; background: var(--success-light); border-radius: var(--radius-md); margin-top: 16px;">
                    <p style="margin: 0; color: var(--text-muted); font-size: 0.8125rem;">Total Harga:</p>
                    <p style="font-size: 1.5rem; font-weight: 700; color: var(--success); margin: 4px 0 0;" id="totalPrice">{{formatPrice schedule.price}}</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeModal('bookingModal')">Batal</button>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-shopping-cart"></i> Pesan Sekarang
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    const pricePerSeat = {{schedule.price}};
    const maxSeats = {{seatInfo.available}};

    function openBookingModal() {
        openModal('bookingModal');
    }

    function updateTotal() {
        let seatCount = parseInt(document.getElementById('seatCountInput').value) || 1;
        if (seatCount > maxSeats) {
            seatCount = maxSeats;
            document.getElementById('seatCountInput').value = maxSeats;
        }
        const total = pricePerSeat * seatCount;
        document.getElementById('totalPrice').textContent = 'Rp ' + total.toLocaleString('id-ID');
    }
</script>
{{/if}}
{{/if}}
{{/if}}

{{else}}
<div class="card">
    <div class="empty-state">
        <i class="fas fa-exclamation-triangle"></i>
        <h3>Jadwal Tidak Ditemukan</h3>
        <p>Jadwal yang Anda cari tidak ada atau telah dihapus.</p>
        <a href="/schedules" class="btn btn-primary" style="margin-top: 16px;">
            <i class="fas fa-arrow-left"></i> Kembali ke Jadwal
        </a>
    </div>
</div>
{{/if}}
