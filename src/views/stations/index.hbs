<div class="page-header">
    <h1><i class="fas fa-map-marker-alt"></i> Stasiun</h1>
    <p>Kelola stasiun kereta dalam sistem</p>
</div>

{{#if (eq userRole "ADMIN")}}
<div class="card" style="margin-bottom: 24px;">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-plus-circle"></i> Tambah Stasiun Baru</h3>
    </div>
    <form action="/stations" method="POST">
        <div style="display: grid; grid-template-columns: 1fr 150px auto; gap: 12px; align-items: end;">
            <div class="form-group" style="margin: 0;">
                <label class="form-label">Nama Stasiun</label>
                <input type="text" name="name" class="search-input" placeholder="e.g., Gambir" required maxlength="50">
            </div>
            <div class="form-group" style="margin: 0;">
                <label class="form-label">Kode (3 huruf)</label>
                <input type="text" name="code" class="search-input" placeholder="e.g., GMR" required maxlength="3" minlength="3" style="text-transform: uppercase;">
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus"></i> Tambah
            </button>
        </div>
    </form>
</div>
{{/if}}

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-list"></i> Semua Stasiun</h3>
        <span class="badge badge-info">{{stations.length}} stasiun</span>
    </div>
    
    {{#if stations.length}}
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nama Stasiun</th>
                    <th>Kode</th>
                    {{#if (eq userRole "ADMIN")}}
                    <th>Aksi</th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each stations}}
                <tr>
                    <td style="color: var(--text-muted);">{{this.id}}</td>
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 34px; height: 34px; background: var(--success-light); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                <i class="fas fa-map-marker-alt" style="color: var(--success); font-size: 0.75rem;"></i>
                            </div>
                            <strong style="color: var(--text-primary);">{{this.name}}</strong>
                        </div>
                    </td>
                    <td><span class="badge badge-info">{{this.code}}</span></td>
                    {{#if (eq ../userRole "ADMIN")}}
                    <td>
                        <div class="action-btns">
                            <a href="/stations/{{this.id}}" class="btn-icon edit" title="Lihat Detail">
                                <i class="fas fa-eye"></i>
                            </a>
                            <button class="btn-icon delete" onclick="deleteStation({{this.id}}, '{{this.name}}')" title="Hapus">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="empty-state">
        <i class="fas fa-map-marker-alt"></i>
        <h3>Belum Ada Data</h3>
        <p>Menunggu Admin menambahkan data stasiun</p>
    </div>
    {{/if}}
</div>

<!-- Delete Confirmation Modal -->
<div class="modal-overlay" id="deleteModal">
    <div class="modal">
        <div class="modal-header">
            <h3 class="modal-title"><i class="fas fa-exclamation-triangle" style="color: var(--danger);"></i> Konfirmasi Hapus</h3>
            <button class="modal-close" onclick="closeModal('deleteModal')"><i class="fas fa-times"></i></button>
        </div>
        <div class="modal-body">
            <p>Apakah Anda yakin ingin menghapus stasiun "<span id="deleteStationName" style="font-weight: 600; color: var(--text-primary);"></span>"?</p>
            <p style="color: var(--text-muted); font-size: 0.8125rem; margin-top: 8px;">Tindakan ini tidak dapat dibatalkan.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('deleteModal')">Batal</button>
            <button class="btn btn-danger" id="confirmDeleteBtn"><i class="fas fa-trash"></i> Hapus</button>
        </div>
    </div>
</div>

<script>
    let stationToDelete = null;
    function deleteStation(id, name) {
        stationToDelete = id;
        document.getElementById('deleteStationName').textContent = name;
        openModal('deleteModal');
    }
    document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
        if (stationToDelete) {
            try {
                const response = await fetch('/stations/' + stationToDelete, { method: 'DELETE' });
                const result = await response.json();
                if (result.success) {
                    window.location.href = '/stations?message=Stasiun berhasil dihapus&messageType=success';
                } else {
                    closeModal('deleteModal');
                    showPopup('danger', result.message || 'Gagal menghapus stasiun');
                }
            } catch (error) {
                closeModal('deleteModal');
                showPopup('danger', 'Gagal menghapus stasiun');
            }
        }
    });
</script>
