<div class="page-header">
    <h1><i class="fas fa-calendar-alt"></i> Schedules Management</h1>
    <p>Manage train schedules and routes</p>
</div>

<!-- Search Box -->
<div class="card" style="margin-bottom: 20px;">
    <form action="/schedules" method="GET">
        <div class="search-box" style="margin: 0;">
            <input type="text" name="search" class="search-input" placeholder="Search by train name, origin or destination station..." value="{{search}}">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i> Search
            </button>
            {{#if search}}
            <a href="/schedules" class="btn btn-secondary">
                <i class="fas fa-times"></i> Clear
            </a>
            {{/if}}
        </div>
    </form>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-list"></i> All Schedules</h3>
        <span class="badge badge-info">{{schedules.length}} schedules</span>
    </div>
    
    {{#if schedules.length}}
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Train</th>
                    <th>Route</th>
                    <th>Departure</th>
                    <th>Arrival</th>
                    <th>Price</th>
                    {{#if (eq userRole "ADMIN")}}
                    <th>Actions</th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each schedules}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 40px; height: 40px; background: rgba(59, 130, 246, 0.2); border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-train" style="color: #3b82f6;"></i>
                            </div>
                            <div>
                                <strong>{{this.train.name}}</strong>
                                <div style="font-size: 0.8rem; color: #888;">{{this.train.type}}</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div style="display: flex; align-items: center; gap: 8px;">
                            <span class="badge badge-info">{{this.originStation.code}}</span>
                            <i class="fas fa-arrow-right" style="color: #666;"></i>
                            <span class="badge badge-success">{{this.destinationStation.code}}</span>
                        </div>
                        <div style="font-size: 0.8rem; color: #888; margin-top: 4px;">
                            {{this.originStation.name}} â†’ {{this.destinationStation.name}}
                        </div>
                    </td>
                    <td>{{formatDate this.departureTime}}</td>
                    <td>{{formatDate this.arrivalTime}}</td>
                    <td><strong style="color: #22c55e;">{{formatPrice this.price}}</strong></td>
                    {{#if (eq ../userRole "ADMIN")}}
                    <td>
                        <div class="action-btns">
                            <a href="/schedules/{{this.id}}" class="btn-icon edit" title="View Details">
                                <i class="fas fa-eye"></i>
                            </a>
                            <button class="btn-icon delete" onclick="deleteSchedule({{this.id}})" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="empty-state">
        <i class="fas fa-calendar-alt"></i>
        <h3>Masih Kosong</h3>
        <p>{{#if search}}No schedules found for "{{search}}"{{else}}Menunggu Admin menambahkan jadwal{{/if}}</p>
    </div>
    {{/if}}
</div>

<!-- Delete Confirmation Modal -->
<div class="modal-overlay" id="deleteModal">
    <div class="modal">
        <div class="modal-header">
            <h3 class="modal-title"><i class="fas fa-exclamation-triangle" style="color: #ef4444;"></i> Confirm Delete</h3>
            <button class="modal-close" onclick="closeModal('deleteModal')">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this schedule?</p>
            <p style="color: #888; font-size: 0.9rem; margin-top: 10px;">This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('deleteModal')">Cancel</button>
            <button class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
        </div>
    </div>
</div>

<script>
    let scheduleToDelete = null;
    
    function deleteSchedule(id) {
        scheduleToDelete = id;
        openModal('deleteModal');
    }
    
    document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
        if (scheduleToDelete) {
            try {
                const response = await fetch(`/schedules/${scheduleToDelete}`, {
                    method: 'DELETE',
                });
                const result = await response.json();
                
                if (result.success) {
                    window.location.href = '/schedules?message=Schedule deleted successfully&messageType=success';
                } else {
                    closeModal('deleteModal');
                    showPopup('danger', result.message || 'Failed to delete schedule');
                }
            } catch (error) {
                closeModal('deleteModal');
                showPopup('danger', 'Failed to delete schedule');
            }
        }
    });
</script>
