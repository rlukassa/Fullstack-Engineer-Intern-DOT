<div class="page-header">
    <div style="display: flex; align-items: center; gap: 12px;">
        <a href="/stations" class="btn btn-secondary" style="padding: 8px 12px;">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h1><i class="fas fa-map-marker-alt"></i> Detail Stasiun</h1>
            <p>Informasi lengkap stasiun</p>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-info-circle"></i> Informasi Stasiun</h3>
        <span class="badge badge-info">{{station.code}}</span>
    </div>
    
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; padding: 4px 0;">
        <div>
            <div class="detail-label">ID</div>
            <div class="detail-value">{{station.id}}</div>
        </div>
        <div>
            <div class="detail-label">NAMA STASIUN</div>
            <div class="detail-value">{{station.name}}</div>
        </div>
        <div>
            <div class="detail-label">KODE STASIUN</div>
            <div class="detail-value"><span class="badge badge-info">{{station.code}}</span></div>
        </div>
    </div>
</div>

{{#if (eq userRole "ADMIN")}}
<div class="card" style="margin-top: 24px;">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-edit"></i> Edit Stasiun</h3>
    </div>
    <form action="/stations/{{station.id}}?_method=PUT" method="POST">
        <div class="form-grid-responsive" style="display: grid; grid-template-columns: 1fr 150px auto; gap: 12px; align-items: end;">
            <div class="form-group" style="margin: 0;">
                <label class="form-label">Nama Stasiun</label>
                <input type="text" name="name" class="search-input" value="{{station.name}}" required maxlength="50">
            </div>
            <div class="form-group" style="margin: 0;">
                <label class="form-label">Kode (3 huruf)</label>
                <input type="text" name="code" class="search-input" value="{{station.code}}" required maxlength="3" minlength="3" style="text-transform: uppercase;">
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Simpan
            </button>
        </div>
    </form>
</div>
{{/if}}
