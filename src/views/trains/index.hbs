<div class="page-header">
    <h1><i class="fas fa-train"></i> Kereta</h1>
    <p>Kelola armada kereta dalam sistem</p>
</div>

{{#if (eq userRole "ADMIN")}}
<div class="card" style="margin-bottom: 24px;">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-plus-circle"></i> Tambah Kereta Baru</h3>
    </div>
    <form action="/trains" method="POST">
        <div class="form-grid-responsive" style="display: grid; grid-template-columns: 1fr 1fr 150px auto; gap: 12px; align-items: end;">
            <div class="form-group" style="margin: 0;">
                <label class="form-label">Nama Kereta</label>
                <input type="text" name="name" class="search-input" placeholder="e.g., Argo Bromo" required maxlength="20">
            </div>
            <div class="form-group" style="margin: 0;">
                <label class="form-label">Tipe</label>
                <select name="type" class="search-input" required>
                    <option value="">Pilih Tipe</option>
                    <option value="EKSEKUTIF">Eksekutif</option>
                    <option value="BISNIS">Bisnis</option>
                    <option value="EKONOMI">Ekonomi</option>
                </select>
            </div>
            <div class="form-group" style="margin: 0;">
                <label class="form-label">Total Kursi</label>
                <input type="number" name="totalSeats" class="search-input" placeholder="e.g., 50" required min="1">
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus"></i> Tambah
            </button>
        </div>
    </form>
</div>
{{/if}}

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-list"></i> Semua Kereta</h3>
        <span class="badge badge-info">{{trains.length}} kereta</span>
    </div>
    
    {{#if trains.length}}
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nama Kereta</th>
                    <th>Tipe</th>
                    <th>Total Kursi</th>
                    <th>Dibuat</th>
                    {{#if (eq ../userRole "ADMIN")}}
                    <th>Aksi</th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each trains}}
                <tr>
                    <td style="color: var(--text-muted);">{{this.id}}</td>
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 34px; height: 34px; background: var(--primary-light); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                <i class="fas fa-train" style="color: var(--primary); font-size: 0.75rem;"></i>
                            </div>
                            <strong style="color: var(--text-primary);">{{this.name}}</strong>
                        </div>
                    </td>
                    <td>
                        {{#if (eq this.type "EKSEKUTIF")}}
                        <span class="badge badge-success">{{this.type}}</span>
                        {{else if (eq this.type "BISNIS")}}
                        <span class="badge badge-warning">{{this.type}}</span>
                        {{else}}
                        <span class="badge badge-info">{{this.type}}</span>
                        {{/if}}
                    </td>
                    <td>{{this.totalSeats}} kursi</td>
                    <td style="color: var(--text-muted);">{{formatDate this.createdAt}}</td>
                    {{#if (eq ../userRole "ADMIN")}}
                    <td>
                        <div class="action-btns">
                            <a href="/trains/{{this.id}}" class="btn-icon edit" title="Lihat Detail">
                                <i class="fas fa-eye"></i>
                            </a>
                            <button class="btn-icon delete" onclick="deleteTrain({{this.id}}, '{{this.name}}')" title="Hapus">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="empty-state">
        <i class="fas fa-train"></i>
        <h3>Belum Ada Data</h3>
        <p>Menunggu Admin menambahkan data kereta</p>
    </div>
    {{/if}}
</div>

<!-- Delete Confirmation Modal -->
<div class="modal-overlay" id="deleteModal">
    <div class="modal">
        <div class="modal-header">
            <h3 class="modal-title"><i class="fas fa-exclamation-triangle" style="color: var(--danger);"></i> Konfirmasi Hapus</h3>
            <button class="modal-close" onclick="closeModal('deleteModal')"><i class="fas fa-times"></i></button>
        </div>
        <div class="modal-body">
            <p>Apakah Anda yakin ingin menghapus kereta "<span id="deleteTrainName" style="font-weight: 600; color: var(--text-primary);"></span>"?</p>
            <p style="color: var(--text-muted); font-size: 0.8125rem; margin-top: 8px;">Tindakan ini tidak dapat dibatalkan. Pastikan kereta ini tidak digunakan dalam jadwal apapun.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('deleteModal')">Batal</button>
            <button class="btn btn-danger" id="confirmDeleteBtn"><i class="fas fa-trash"></i> Hapus</button>
        </div>
    </div>
</div>

<script>
    let trainToDelete = null;
    function deleteTrain(id, name) {
        trainToDelete = id;
        document.getElementById('deleteTrainName').textContent = name;
        openModal('deleteModal');
    }
    document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
        if (trainToDelete) {
            try {
                const response = await fetch('/trains/' + trainToDelete, { method: 'DELETE' });
                const result = await response.json();
                if (result.success) {
                    window.location.href = '/trains?message=Kereta berhasil dihapus&messageType=success';
                } else {
                    closeModal('deleteModal');
                    showPopup('danger', result.message || 'Gagal menghapus kereta. Mungkin kereta ini digunakan dalam jadwal.');
                }
            } catch (error) {
                closeModal('deleteModal');
                showPopup('danger', 'Gagal menghapus kereta');
            }
        }
    });
</script>
