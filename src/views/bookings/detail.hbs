<div class="page-header">
    <a href="/bookings" class="btn btn-secondary" style="margin-bottom: 20px;">
        <i class="fas fa-arrow-left"></i> Back to Bookings
    </a>
    <h1><i class="fas fa-ticket-alt"></i> Booking Details</h1>
</div>

{{#if booking}}
<div class="card" style="max-width: 900px;">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-receipt"></i> Booking #{{booking.id}}
        </h3>
        {{#if (eq booking.status "CONFIRMED")}}
        <span class="badge badge-success">Confirmed</span>
        {{else if (eq booking.status "PENDING")}}
        <span class="badge badge-warning">Pending</span>
        {{else if (eq booking.status "CANCELLED")}}
        <span class="badge badge-danger">Cancelled</span>
        {{else}}
        <span class="badge badge-info">{{booking.status}}</span>
        {{/if}}
    </div>
    
    <div style="padding: 30px;">
        <!-- Booking Summary -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
            <div style="padding: 20px; background: rgba(59, 130, 246, 0.1); border-radius: 12px; text-align: center;">
                <div style="font-size: 0.9rem; color: #888; margin-bottom: 5px;">Seats Booked</div>
                <div style="font-size: 2rem; font-weight: bold; color: #3b82f6;">{{booking.seatCount}}</div>
            </div>
            <div style="padding: 20px; background: rgba(34, 197, 94, 0.1); border-radius: 12px; text-align: center;">
                <div style="font-size: 0.9rem; color: #888; margin-bottom: 5px;">Total Price</div>
                <div style="font-size: 2rem; font-weight: bold; color: #22c55e;">{{formatPrice booking.totalPrice}}</div>
            </div>
            <div style="padding: 20px; background: rgba(251, 191, 36, 0.1); border-radius: 12px; text-align: center;">
                <div style="font-size: 0.9rem; color: #888; margin-bottom: 5px;">Booked On</div>
                <div style="font-size: 1rem; font-weight: bold; color: #fbbf24;">{{formatDate booking.createdAt}}</div>
            </div>
        </div>

        <!-- Train Info -->
        <div style="margin-bottom: 30px;">
            <h4 style="color: #888; margin-bottom: 15px;"><i class="fas fa-train"></i> Train Information</h4>
            <div style="display: flex; align-items: center; gap: 20px; padding: 20px; background: rgba(59, 130, 246, 0.1); border-radius: 12px;">
                <div style="width: 60px; height: 60px; background: rgba(59, 130, 246, 0.2); border-radius: 15px; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-train" style="font-size: 1.5rem; color: #3b82f6;"></i>
                </div>
                <div>
                    <h3 style="margin: 0; color: white;">{{booking.schedule.train.name}}</h3>
                    <span class="badge badge-primary" style="margin-top: 8px;">{{booking.schedule.train.type}}</span>
                </div>
            </div>
        </div>
        
        <!-- Route Info -->
        <div style="margin-bottom: 30px;">
            <h4 style="color: #888; margin-bottom: 15px;"><i class="fas fa-route"></i> Route Information</h4>
            <div style="display: flex; align-items: center; gap: 20px;">
                <div style="text-align: center; flex: 1;">
                    <div style="font-size: 0.9rem; color: #888;">From</div>
                    <div style="font-size: 1.8rem; font-weight: bold; color: #3b82f6;">{{booking.schedule.originStation.code}}</div>
                    <div style="color: white;">{{booking.schedule.originStation.name}}</div>
                    <div style="font-size: 0.85rem; color: #888;">{{booking.schedule.originStation.city}}</div>
                </div>
                
                <div style="flex: 0 0 100px; display: flex; flex-direction: column; align-items: center;">
                    <div style="width: 100%; height: 2px; background: linear-gradient(90deg, #3b82f6, #22c55e);"></div>
                    <i class="fas fa-plane" style="color: #666; transform: rotate(90deg); margin: 10px 0;"></i>
                </div>
                
                <div style="text-align: center; flex: 1;">
                    <div style="font-size: 0.9rem; color: #888;">To</div>
                    <div style="font-size: 1.8rem; font-weight: bold; color: #22c55e;">{{booking.schedule.destinationStation.code}}</div>
                    <div style="color: white;">{{booking.schedule.destinationStation.name}}</div>
                    <div style="font-size: 0.85rem; color: #888;">{{booking.schedule.destinationStation.city}}</div>
                </div>
            </div>
        </div>
        
        <!-- Time Info -->
        <div style="margin-bottom: 30px;">
            <h4 style="color: #888; margin-bottom: 15px;"><i class="fas fa-clock"></i> Travel Time</h4>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                <div style="padding: 20px; background: rgba(255,255,255,0.05); border-radius: 12px; border-left: 4px solid #3b82f6;">
                    <div style="font-size: 0.9rem; color: #888;">Departure</div>
                    <div style="font-size: 1.2rem; font-weight: bold; color: white;">{{formatDate booking.schedule.departureTime}}</div>
                </div>
                <div style="padding: 20px; background: rgba(255,255,255,0.05); border-radius: 12px; border-left: 4px solid #22c55e;">
                    <div style="font-size: 0.9rem; color: #888;">Arrival</div>
                    <div style="font-size: 1.2rem; font-weight: bold; color: white;">{{formatDate booking.schedule.arrivalTime}}</div>
                </div>
            </div>
        </div>

        <!-- Passenger Info -->
        {{#if booking.user}}
        <div style="margin-bottom: 30px;">
            <h4 style="color: #888; margin-bottom: 15px;"><i class="fas fa-user"></i> Passenger Information</h4>
            <div style="padding: 20px; background: rgba(255,255,255,0.05); border-radius: 12px;">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                    <div>
                        <span style="color: #888;">Name:</span>
                        <span style="color: white; margin-left: 10px;">{{booking.user.name}}</span>
                    </div>
                    <div>
                        <span style="color: #888;">Email:</span>
                        <span style="color: white; margin-left: 10px;">{{booking.user.email}}</span>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}

        <!-- E-Ticket -->
        <div style="margin-top: 30px; padding: 25px; background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(139, 92, 246, 0.2)); border-radius: 12px; border: 2px dashed rgba(255,255,255,0.2);">
            <div style="text-align: center;">
                <i class="fas fa-qrcode" style="font-size: 4rem; color: white; margin-bottom: 15px;"></i>
                <h3 style="color: white; margin: 0;">E-Ticket</h3>
                <p style="color: #888; margin-top: 5px;">Present this code at the station</p>
                <div style="font-size: 1.5rem; font-weight: bold; color: #fef08a; margin-top: 15px; letter-spacing: 3px;">
                    TKT-{{booking.id}}-{{booking.schedule.id}}
                </div>
            </div>
        </div>
        
        {{#if (eq booking.status "PENDING")}}
        <div style="display: flex; gap: 15px; justify-content: center; margin-top: 30px;">
            <button class="btn btn-danger" onclick="cancelBooking({{booking.id}})">
                <i class="fas fa-times"></i> Cancel Booking
            </button>
        </div>
        {{/if}}
    </div>
</div>
{{else}}
<div class="card">
    <div class="empty-state">
        <i class="fas fa-exclamation-triangle"></i>
        <h3>Booking Not Found</h3>
        <p>The booking you're looking for doesn't exist or has been removed.</p>
        <a href="/bookings" class="btn btn-primary" style="margin-top: 20px;">
            <i class="fas fa-arrow-left"></i> Back to Bookings
        </a>
    </div>
</div>
{{/if}}

<!-- Cancel Booking Modal -->
<div class="modal-overlay" id="cancelModal">
    <div class="modal">
        <div class="modal-header">
            <h3 class="modal-title"><i class="fas fa-exclamation-triangle" style="color: #ef4444;"></i> Cancel Booking</h3>
            <button class="modal-close" onclick="closeModal('cancelModal')">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to cancel this booking?</p>
            <p style="color: #888; font-size: 0.9rem; margin-top: 10px;">This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('cancelModal')">Keep Booking</button>
            <button class="btn btn-danger" id="confirmCancelBtn">Cancel Booking</button>
        </div>
    </div>
</div>

<script>
    let bookingToCancel = null;
    
    function cancelBooking(id) {
        bookingToCancel = id;
        openModal('cancelModal');
    }
    
    document.getElementById('confirmCancelBtn').addEventListener('click', async function() {
        if (bookingToCancel) {
            try {
                const response = await fetch(`/bookings/${bookingToCancel}`, {
                    method: 'DELETE',
                });
                const result = await response.json();
                
                if (result.success) {
                    window.location.href = '/bookings?message=Booking cancelled successfully&messageType=success';
                } else {
                    closeModal('cancelModal');
                    showPopup('danger', result.message || 'Failed to cancel booking');
                }
            } catch (error) {
                closeModal('cancelModal');
                showPopup('danger', 'Failed to cancel booking');
            }
        }
    });
</script>
