<div class="page-header">
    <h1><i class="fas fa-ticket-alt"></i> Pemesananku</h1>
    <p>Lihat dan kelola pemesanan tiket kereta Anda</p>
</div>

{{#if (not (eq userRole "ADMIN"))}}
<div style="padding: 14px 20px; background: var(--bg-surface); border: 1px solid var(--border); border-radius: var(--radius-lg); margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
    <div>
        <span style="color: var(--text-muted); font-size: 0.8125rem;">Saldo Anda:</span>
        <strong style="color: var(--success); font-size: 1.25rem; margin-left: 8px;">{{formatBalance balance}}</strong>
    </div>
    <button onclick="openModal('topupModal')" class="btn btn-success btn-sm">
        <i class="fas fa-plus"></i> Top Up Saldo
    </button>
</div>
{{/if}}

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-list"></i> Riwayat Pemesanan</h3>
        <span class="badge badge-info">{{bookings.length}} pemesanan</span>
    </div>
    
    {{#if bookings.length}}
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Kode Booking</th>
                    <th>Kereta</th>
                    <th>Rute</th>
                    <th>Keberangkatan</th>
                    <th>Kursi</th>
                    <th>Total Harga</th>
                    <th>Status Pembayaran</th>
                    <th>Status Kereta</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                {{#each bookings}}
                <tr>
                    <td>
                        <span style="font-weight: 600; color: var(--primary); font-family: 'SF Mono', 'Cascadia Code', monospace; font-size: 0.8125rem;">{{this.bookingCode}}</span>
                    </td>
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 34px; height: 34px; background: var(--primary-light); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-train" style="color: var(--primary); font-size: 0.75rem;"></i>
                            </div>
                            <div>
                                <strong style="color: var(--text-primary); font-size: 0.875rem;">{{this.schedule.train.name}}</strong>
                                <div style="font-size: 0.75rem; color: var(--text-muted);">{{this.schedule.train.type}}</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div style="display: flex; align-items: center; gap: 6px;">
                            <span class="badge badge-info">{{this.schedule.originStation.code}}</span>
                            <i class="fas fa-arrow-right" style="color: var(--text-muted); font-size: 0.65rem;"></i>
                            <span class="badge badge-success">{{this.schedule.destinationStation.code}}</span>
                        </div>
                    </td>
                    <td style="color: var(--text-secondary); font-size: 0.8125rem;">{{formatDate this.schedule.departureTime}}</td>
                    <td>
                        <span class="badge badge-primary">{{this.seatCount}} kursi</span>
                    </td>
                    <td>
                        <strong style="color: var(--success);">{{formatPrice this.totalPrice}}</strong>
                    </td>
                    <td>
                        {{#if (eq this.status "CONFIRMED")}}
                        <span class="badge badge-success"><i class="fas fa-check-circle"></i> Terkonfirmasi</span>
                        {{else if (eq this.status "PENDING")}}
                        <span class="badge badge-warning"><i class="fas fa-hourglass-half"></i> Menunggu</span>
                        {{else if (eq this.status "CANCELLED")}}
                        <span class="badge badge-danger"><i class="fas fa-times-circle"></i> Dibatalkan</span>
                        {{else}}
                        <span class="badge badge-info">{{this.status}}</span>
                        {{/if}}
                    </td>
                    <td>
                        {{#if (eq this.schedule.journeyStatus "BELUM_BERANGKAT")}}
                        <span class="badge badge-warning"><i class="fas fa-clock"></i> Belum Berangkat</span>
                        {{else if (eq this.schedule.journeyStatus "DALAM_PERJALANAN")}}
                        <span class="badge badge-info"><i class="fas fa-train"></i> Dalam Perjalanan</span>
                        {{else if (eq this.schedule.journeyStatus "TIBA_LOKASI")}}
                        <span class="badge badge-success"><i class="fas fa-map-marker-alt"></i> Tiba Lokasi</span>
                        {{else}}
                        <span class="badge badge-secondary">{{this.schedule.journeyStatus}}</span>
                        {{/if}}
                    </td>
                    <td>
                        <div class="action-btns">
                            <a href="/bookings/{{this.id}}" class="btn-icon edit" title="Lihat Detail">
                                <i class="fas fa-eye"></i>
                            </a>
                            {{#if (eq this.status "PENDING")}}
                            {{#if (eq this.schedule.journeyStatus "BELUM_BERANGKAT")}}
                            <form action="/bookings/{{this.id}}/pay" method="POST" style="display: inline;">
                                <button type="submit" class="btn-icon" style="background: var(--success-light); color: var(--success);" title="Bayar Sekarang">
                                    <i class="fas fa-credit-card"></i>
                                </button>
                            </form>
                            <button class="btn-icon delete" onclick="cancelBooking({{this.id}})" title="Batalkan Pemesanan">
                                <i class="fas fa-times"></i>
                            </button>
                            {{/if}}
                            {{/if}}
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="empty-state">
        <i class="fas fa-ticket-alt"></i>
        <h3>Belum Ada Pemesanan</h3>
        <p>Anda belum melakukan pemesanan apapun.</p>
        <a href="/schedules" class="btn btn-primary" style="margin-top: 16px;">
            <i class="fas fa-calendar-alt"></i> Jelajahi Jadwal
        </a>
    </div>
    {{/if}}
</div>

<!-- Top Up Modal -->
{{#if (not (eq userRole "ADMIN"))}}
<div class="modal-overlay" id="topupModal">
    <div class="modal">
        <div class="modal-header">
            <h3 class="modal-title"><i class="fas fa-wallet" style="color: var(--success);"></i> Top Up Saldo</h3>
            <button class="modal-close" onclick="closeModal('topupModal')">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <form action="/auth/topup" method="POST">
            <div class="modal-body">
                <p style="margin-bottom: 16px; color: var(--text-muted); font-size: 0.875rem;">Saldo saat ini: <strong style="color: var(--success);">{{formatBalance balance}}</strong></p>
                
                <div class="form-group">
                    <label class="form-label">Jumlah Top Up (Rupiah)</label>
                    <input type="number" name="amount" class="form-control" placeholder="Masukkan jumlah" min="10000" max="10000000" step="10000" required>
                    <small style="color: var(--text-muted); margin-top: 4px; display: block; font-size: 0.75rem;">Min: Rp 10.000 | Max: Rp 10.000.000</small>
                </div>
                
                <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 8px; margin-top: 12px;">
                    <button type="button" class="btn btn-secondary btn-sm topup-preset" data-amount="50000">Rp 50.000</button>
                    <button type="button" class="btn btn-secondary btn-sm topup-preset" data-amount="100000">Rp 100.000</button>
                    <button type="button" class="btn btn-secondary btn-sm topup-preset" data-amount="200000">Rp 200.000</button>
                    <button type="button" class="btn btn-secondary btn-sm topup-preset" data-amount="500000">Rp 500.000</button>
                    <button type="button" class="btn btn-secondary btn-sm topup-preset" data-amount="1000000">Rp 1.000.000</button>
                    <button type="button" class="btn btn-secondary btn-sm topup-preset" data-amount="2000000">Rp 2.000.000</button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeModal('topupModal')">Batal</button>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus"></i> Top Up Sekarang
                </button>
            </div>
        </form>
    </div>
</div>
{{/if}}

<!-- Cancel Booking Modal -->
<div class="modal-overlay" id="cancelModal">
    <div class="modal">
        <div class="modal-header">
            <h3 class="modal-title"><i class="fas fa-exclamation-triangle" style="color: var(--danger);"></i> Batalkan Pemesanan</h3>
            <button class="modal-close" onclick="closeModal('cancelModal')">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <p>Apakah Anda yakin ingin membatalkan pemesanan ini?</p>
            <p style="color: var(--text-muted); font-size: 0.8125rem; margin-top: 8px;">Jika sudah dibayar, saldo akan dikembalikan.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('cancelModal')">Pertahankan</button>
            <button class="btn btn-danger" id="confirmCancelBtn"><i class="fas fa-times"></i> Batalkan Pemesanan</button>
        </div>
    </div>
</div>

<script>
    let bookingToCancel = null;
    
    function cancelBooking(id) {
        bookingToCancel = id;
        openModal('cancelModal');
    }
    
    document.getElementById('confirmCancelBtn').addEventListener('click', async function() {
        if (bookingToCancel) {
            try {
                const response = await fetch('/bookings/' + bookingToCancel, { method: 'DELETE' });
                const result = await response.json();
                if (result.success) {
                    let message = 'Pemesanan berhasil dibatalkan';
                    if (result.refundAmount && result.refundAmount > 0) {
                        message += '. Refund Rp ' + result.refundAmount.toLocaleString('id-ID') + ' telah dikembalikan';
                    }
                    window.location.href = '/bookings?message=' + encodeURIComponent(message) + '&messageType=success';
                } else {
                    closeModal('cancelModal');
                    showPopup('danger', result.message || 'Gagal membatalkan pemesanan');
                }
            } catch (error) {
                closeModal('cancelModal');
                showPopup('danger', 'Gagal membatalkan pemesanan');
            }
        }
    });

    document.querySelectorAll('.topup-preset').forEach(btn => {
        btn.addEventListener('click', function() {
            const amount = this.getAttribute('data-amount');
            document.querySelector('#topupModal input[name="amount"]').value = amount;
        });
    });
</script>
